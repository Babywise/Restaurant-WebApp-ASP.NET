@model AccountViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Register</h2>
                        <div class="d-flex justify-content-center mb-4">
                            <img src="~/images/MealOrderingLogo.png" alt="LOGO" class="rounded-circle" width="100">
                        </div>
                        <form method="post">
                            <div class="form-group mb-1">
                                <span asp-validation-for="AccountRequest.UserName" class="text-danger"></span>
                                @*<label asp-for="AccountRequest.Account.UserName">Username:</label>*@
                                <div class="input-group">
                                    <input type="text" asp-for="AccountRequest.UserName" class="form-control" id="username" placeholder="Username" required/>
                                </div>
                            </div>
                            <partial name="_AccountFormFieldsPartial" model="@Model" />
                            <partial name="_AccountPasswordPartial" model="@Model" />
                            <div>
                                <input asp-for="AccountRequest.AccountType" value="Customer" hidden />
                            </div>
                            <div class="form-group d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary w-100">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>