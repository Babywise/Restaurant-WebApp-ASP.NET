@model AddProductToCartViewModel
@{
    ViewData["Title"] = Model.Product.Name + "Details";
    
}

<div class="container">
    <div class="row">
        <h1>@Model.Product.Name</h1>
        <div class="col-lg-12">
            <table class="table table-bordered">
                <tbody>
                    @foreach (var prop in new Dictionary<string, string>
                    {
                        { "Category", Model.Product.Category.Name },
                        { "Description", Model.Product.Description },
                        { "Price", Model.Product.Cost.ToString() },
                        { "Available Quantity", Model.Product.Quantity.ToString() }
                    })
                    {
                        <tr>
                            <th>@prop.Key</th>
                            <td>@prop.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <form method="post">
        <div class="row align-items-center input-group">
            <div class="col-2">
                <input type="text" class="form-control" asp-for="@Model.QuantityToAdd"
                placeholder="Type a Quantity" aria-label="Type a Quantity" aria-describedby="add-category-button">
            </div>
            <div class="col-1 input-group-append">
                <button type="submit" class="input-group-text btn btn-primary" id="add-item-button"
                    asp-controller="Order" asp-action="AddToCart"
                    asp-route-CategoryId=@Model.Product.CategoryId asp-route-ProductId=@Model.Product.ProductId>
                    Add
                </button>
            </div>
            <div class="col-9">
            </div>
        </div>
    </form>
</div>