@model Category
@{
    ViewData["Title"] = Model.Name + "Menu";
    int productCount = 0;
}

<div class="row">
    <div class="col-lg-12">
        <h1>@Model.Name</h1>
    </div>
</div>


<div class="row">
    @foreach (var product in Model.Products)
    {
        if (productCount % 3 == 0 && productCount != 0)
        {
            @:</div>
            @:<div class="row">
        }

        <div class="col-md-4">
            <div class="card mb-4">
                <a href="@Url.Action("DisplayItem", "Menu", new { id = product.ProductId })">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">$@product.Cost<p>
                    </div>
                </a>
            </div>
        </div>

        productCount++;
    }
</div>